{
  "compilerOptions": {
    "target": "ES6",
    "module": "es6",
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "allowJs": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "typeRoots": ["node_modules/@types", "node_module/phaser/types"],
    "types": ["phaser"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
